model User {
  id           String               @id @default(cuid())
  email        String               @unique
  username     String
  bio          String               @db.Text
  password     String
  // REFERANCES
  // 1) For booked owner one to many
  currentBooks Book[]
  // 2) For liked books
  likedBooks   user_liked_books[]
  // 3) For old booked books
  oldBookings  user_past_bookings[]
}
